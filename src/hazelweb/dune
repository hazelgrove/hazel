(include_subdirs unqualified)

(alias
 (name default)
 (deps
  (glob_files www/*)))

(rule
 (target Version_autogenerated.re)
 (deps "Version_autogenerator.sh")
 (action
  (with-stdout-to
   Version_autogenerated.re
   (system "./Version_autogenerator.sh")))
 (mode
  (promote (until-clean))))

(library
 ;; This library ensures that all modules are type checked even if they are not used.
 (name hazelweb)
 (modules :standard \ Main)
 (libraries hazelcore incr_dom hazeltext)
 (wrapped false)
 (js_of_ocaml
  (flags ()))
 (preprocess
  (pps js_of_ocaml-ppx ppx_let ppx_sexp_conv)))

(executable
 (name main)
 (modules Main)
 (libraries hazelweb)
 (modes js)
 (preprocess
  (pps js_of_ocaml-ppx ppx_let ppx_sexp_conv)))

(env
 (dev
  (js_of_ocaml
   (flags
    (:standard
     --source-map
     --debug-info
     --no-inline
     (--disable staticeval)
     (--disable share)))
   (link_flags
    (:standard --source-map)))))
