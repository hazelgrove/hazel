(include_subdirs unqualified)

(alias
 (name default)
 (deps
  (source_tree www)))

(library
 (name workerServer)
 (modules WorkerServer)
 (instrumentation
  (backend bisect_ppx))
 (libraries
  bonsai
  bonsai.web
  virtual_dom.input_widgets
  util
  ppx_yojson_conv.expander
  haz3lcore
  haz3lschool
  pretty
  omd)
 (js_of_ocaml)
 (preprocess
  (pps
   ppx_yojson_conv
   js_of_ocaml-ppx
   ppx_let
   ppx_sexp_conv
   ppx_deriving.show)))

